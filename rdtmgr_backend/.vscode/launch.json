{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno (debug)",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "-A",
        "src/server.ts"],
      "attachSimplePort": 9229,
      "outputCapture": "std"
    },
    {
      "name": "Deno (test)",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--inspect-brk",
        "-A",
        "${relativeFile}"
      ],
      "attachSimplePort": 9229,
      "outputCapture": "std"
    }
  ]
}
